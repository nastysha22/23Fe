import random
import asyncio
from aiogram import Bot, Dispatcher, types
from aiogram.filters import Command
 
bot = Bot(token="8111797848:AAFMJQB6Mh0uaT_Qru68VDvHIwrOgBMERoM")
dp = Dispatcher()
 
@dp.message( Command('start'))
async def cmd_start(message:types.message):
    print('–≤–≤–µ–ª–∏ –∫–æ–º–∞–Ω–¥—É /start')
    await message.answer( '–ø—Ä–∏–≤–µ—Ç, —Ç—Ñ –≤–≤–µ–ª –∫–æ–º–∞–Ω–¥—É /start' )
 
@dp.message( Command('echo'))
async def cmd_echo(message:types.message):
    print('–≤–≤–µ–ª–∏ –∫–æ–º–∞–Ω–¥—É /echo')
    text = message.text.replace('/echo','').strip()
    if text:
        await message.answer(text)
    else:
        await message.answer('–ø–æ–∂–∞–ª—É–π—Å—Ç–∞ –¥–æ–±–∞–≤—å—Ç–µ —Ç–µ–∫—Å—Ç –∫ —Å–æ–æ–±—â–µ–Ω–∏—é')
 
@dp.message( Command('kiss'))
async def cmd_kiss(message:types.message):
    print('—Ç—ã –≤–≤–µ–ª –∫–æ–º–∞–Ω–¥—É /kiss')
    await message.answer( 'üíã' )
 
@dp.message( Command('tsuefa'))
async def cmd_start(message:types.message):
    print('–≤–≤–µ–ª–∏ –∫–æ–º–∞–Ω–¥—É /tsuefa')
    await message.answer ( '/tsuefa ') 
    m=[ "–∫–∞–º–µ–Ω—å" ,"–Ω–æ–∂–Ω–∏—Ü—ã" ," –±—É–º–∞–≥–∞"]
    a=random.choice(m)
    text = message.text.replace('/tsuefa','').strip()
    if text==a:
        await message.answer('–ù–ò–ß–¨–Ø')
    elif (a=='–∫–∞–º–µ–Ω—å' and text=='–±—É–º–∞–≥–∞') or (a=='–±—É–º–∞–≥–∞' and text=='–Ω–æ–∂–Ω–∏—Ü—ã' ) or (a=='–Ω–æ–∂–Ω–∏—Ü—ã' and text=='–∫–∞–º–µ–Ω—å'):
        await message.answer('üéâ')
    else :
        await message.answer('—Ç—ã –¥–æ–ø—É—Å—Ç–∏–ª –æ—à–∏–±–∫—É,–Ω–æ –º—ã –¥–∞–µ–º —Ç–µ–±–µ –µ—â–µ –æ–¥–∏–Ω —à–∞–Ω—Å')






async def main():
    await dp.start_polling(bot)
 
if __name__ =='__main__':
    print('–±–æ—Ç –Ω–∞—á–∞–ª —Ä–∞–±–æ—Ç–∞—Ç—å')
    asyncio.run(main())



